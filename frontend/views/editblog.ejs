<%- include('../partial/header') %>

<div style="width: 80%; margin: auto; margin-top: 80px; background-color: white; border-radius: 4%; padding: 3%;">

    <form action="/blogs/new_blog" method="post" enctype="multipart/form-data">

        <h1 style="text-align: center;">Create Blog</h1>
        <br>
        <input type="text" id="title" placeholder="Title" name="title" required autofocus
            style="width: 100%; height: 50px; font-size: 30px; text-align: center;" value="<%= title %> ">

        <br><br>

        <textarea id="content" name="content" rows="50" cols="1000" style="max-width: 100%;" ><%= content %></textarea>
        
        <br>
        <br>
        
        <button  class="btn btn-success" type="submit">Edit</button>
        
    </form>
<br>


</div>
<br>
